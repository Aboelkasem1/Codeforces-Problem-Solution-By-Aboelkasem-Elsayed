#include <bits/stdc++.h>
using namespace std;
void iofile ();
 
int main() {

	iofile ();

    int q; cin >> q;
    
    string s;

    int sum = 0;

    for (int i = 0; i < q; i++)
    {
        cin >> s;

        if (s == "X++" || s == "++X")
        {
            sum++;
        }
        else
        {
            sum--;
        }
        
        
    }
    
    cout << sum ;
    return 0;
}


 
void iofile (){
	ios_base::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
 
#ifndef ONLINE_JUDGE
	freopen("input.txt", "r", stdin), freopen("output.txt", "w", stdout);
#endif
}
